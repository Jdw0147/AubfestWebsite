<!DOCTYPE html>
<html lang="en">
<link rel="icon" type="image/png" href="/favicon.png">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles/main.css">
    <% if (page==='home' ) { %>
        <link rel="stylesheet" href="/styles/home.css">
        <% } %>
            <% if (page==='photos' ) { %>
                <link rel="stylesheet" href="/styles/photos.css">
                <% } %>
</head>

<body>
    <header class="main-header" style="background-color: #AE1C33; color: #ECD189;">
        <div class="header-flex">
            <div class="logo mobile-logo">
                <a href="/">
                    <img class="rectangle-logo" src="/images/aubfest-horizontal.png" />
                    <img class="square-logo" src="/images/aubfest-logo.png" />
                </a>
            </div>
            <nav class="nav-container">
                <div>
                    <button class="tickets-btn tickets-button<%= page === 'tickets' ? ' active' : '' %>"
                        onclick="window.location.href='/tickets'" type="button">Tickets</button>
                </div>
            </nav>
            <button class="hamburger" id="hamburger-menu" aria-label="Open navigation menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <button class="close-menu" id="close-menu" aria-label="Close navigation menu">&times;</button>
            <div class="nav-overlay" id="nav-overlay"></div>
            <!-- Desktop nav links -->
            <ul class="nav-links desktop-nav">
                <li><a href="/" class="<%= page === 'home' ? 'active' : '' %>" style="color: #ECD189;">Home</a></li>
                <li><a href="/lineup" class="<%= page === 'lineup' ? 'active' : '' %>"
                        style="color: #ECD189;">Lineup</a></li>
                <li><a href="/involved" class="<%= page === 'involved' ? 'active' : '' %>" style="color: #ECD189;">Get
                        Involved</a></li>
                <li><a href="/photos" class="<%= page === 'photos' ? 'active' : '' %>"
                        style="color: #ECD189;">Photos</a></li>
                <li><a href="/about" class="<%= page === 'about' ? 'active' : '' %>" style="color: #ECD189;">FAQ</a>
                </li>
                <% if (typeof loggedIn !=='undefined' && loggedIn) { %>
                    <li><a href="/admin" class="<%= page === 'admin' ? 'active' : '' %>"
                            style="color: #ECD189;">Admin</a></li>
                    <% } %>
            </ul>
            <!-- Mobile slide-in menu -->
            <ul class="slide-menu" id="slide-menu">
                <li><a href="/" class="<%= page === 'home' ? 'active' : '' %>" style="color: #ECD189;">Home</a></li>
                <li><a href="/lineup" class="<%= page === 'lineup' ? 'active' : '' %>"
                        style="color: #ECD189;">Lineup</a></li>
                <li><a href="/involved" class="<%= page === 'involved' ? 'active' : '' %>" style="color: #ECD189;">Get
                        Involved</a></li>
                <li><a href="/photos" class="<%= page === 'photos' ? 'active' : '' %>"
                        style="color: #ECD189;">Photos</a></li>
                <li><a href="/about" class="<%= page === 'about' ? 'active' : '' %>" style="color: #ECD189;">FAQ</a>
                </li>
                <% if (typeof loggedIn !=='undefined' && loggedIn) { %>
                    <li><a href="/admin" class="<%= page === 'admin' ? 'active' : '' %>"
                            style="color: #ECD189;">Admin</a></li>
                    <% } %>
            </ul>
        </div>
    </header>
    <script>
        const hamburgerMenu = document.getElementById('hamburger-menu');
        const closeMenu = document.getElementById('close-menu');
        const navOverlay = document.getElementById('nav-overlay');
        const slideMenu = document.getElementById('slide-menu');

        hamburgerMenu.addEventListener('click', () => {
            navOverlay.classList.toggle('active');
            slideMenu.classList.toggle('active');
        });

        closeMenu.addEventListener('click', () => {
            navOverlay.classList.remove('active');
            slideMenu.classList.remove('active');
        });

        navOverlay.addEventListener('click', () => {
            navOverlay.classList.remove('active');
            slideMenu.classList.remove('active');
        });
    </script>
</body>

</html>