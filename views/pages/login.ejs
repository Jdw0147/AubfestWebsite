<!-- Admin Login Page -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Aubfest</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/login.css">
</head>

<body class="body-bg-fixed login-bg">
    <div class="login-container login-container-bg">
        <img src="/images/aubfest-horizontal.png" alt="Aubfest Logo"
            style="max-width: 240px; width: 95%; margin-bottom: 1.2rem; display: block; margin-left: auto; margin-right: auto;">
        <% if (error) { %>
            <div class="login-error">
                <%= error %>
            </div>
            <% } %>
                <form method="POST" action="/login">
                    <input type="password" name="password" placeholder="Password" required
                        autocomplete="current-password">
                    <button type="submit">Login</button>
                </form>
    </div>
</body>

</html>