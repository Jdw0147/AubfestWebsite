<!-- =========================
     Lineup Page
     This page displays the current
     lineup of artists for the upcoming
     festival.  Each artist has their 
     own card which displays an image
     of each artist, with thier name
     appearing on hover(desktop) or on
     tap(mobile).  Clicking an artist
     card(desktop) or double tapping(mobile)
     will open artist's website in a new tab.
     ========================= -->


<!-- Header Inclusion -->
<%- include('../partials/header') %>

    <!-- Stylesheet-->
    <link rel="stylesheet" href="/styles/about.css">
    <link rel="stylesheet" href="/styles/lineup.css">

    <!-- Header -->
    <div class="page-header">
        <h1>Lineup</h1>
    </div>

    <!-- =========================
    Main Content of Page
    ========================= -->
    <main class="lineup-page">

        <div class="lineup-flex-row">
            <div class="lineup-flyer-col">
                <img src="/images/submission-flyer.png" alt="Submission Flyer Left"
                    class="lineup-flyer-img">
            </div>
            <div class="lineup-main-col">
                <!-- Your existing lineup content here -->
                <div class="lineup-tba-section">
                    <h1 class="lineup-tba-title">AubFest VIII Lineup TBA...</h1>
                    <div class="lineup-buttons">
                        <a href="/past-lineups" class="lineup-btn">Past Lineups</a>
                        <a href="/lineups/fest/7" class="lineup-btn">AubFest VII Lineup</a>
                    </div>
                    <div class="lineup-buttons">
                        <a href="https://docs.google.com/forms/d/e/1FAIpQLScF72pd_cBWZjEqQt5CBxSVmXDxLceB3qGX6977dClZb86gyQ/viewform" class="lineup-btn btn-apply">Apply for AubFest VIII</a>
                    </div>
                </div>
            </div>
            <div class="lineup-flyer-col">
                <img src="/images/submission-flyer2.png" alt="Submission Flyer Right"
                    class="lineup-flyer-img">
            </div>
        </div>

    </main>

    <script src="/scripts/lineup.js"></script>
    <%- include('../partials/footer') %>